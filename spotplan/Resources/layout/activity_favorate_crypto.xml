<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="333.5dp"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:hint="@string/android_cryptoid"
            android:id="@+id/textInputEditTextID" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_marginTop="20px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="333.5dp"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:hint="@string/app_cryptoname"
            android:id="@+id/textInputEditTextCryptoName" />
    </RelativeLayout>
  
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/relativeLayout1">
        <Button
            android:text="@string/app_btnadd"
            android:layout_width="81.0dp"
            android:layout_height="46.0dp"
            android:backgroundTint="@android:color/black"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnadd"
            android:layout_marginBottom="6.0dp"
            android:fontFamily="monospace"/>
        <Button
            android:text="@string/app_btnupdate"
            android:layout_width="104.5dp"
            android:layout_height="46.0dp"
            android:layout_marginLeft="180px"
            android:minWidth="25px"
            android:backgroundTint="#26a17b"
            android:minHeight="25px"
            android:id="@+id/btnupdate"
            android:fontFamily="monospace"
            android:layout_marginRight="0.0dp" />
        <Button
            android:text="@string/app_btndelete"
            android:layout_width="118.5dp"
            android:layout_height="46.0dp"
            android:minWidth="25px"
            android:backgroundTint="@android:color/holo_red_light"
            android:minHeight="25px"
            android:layout_marginLeft="410px"
            android:id="@+id/btndelete"
            android:fontFamily="monospace"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="395.5dp"
        android:layout_height="20.5dp"
        android:layout_marginTop="50px"
        android:gravity="center_horizontal">
        <TextView
            android:text="@string/android_texback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/textViewbackfca"
            android:textAlignment="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="11.5dp"
        android:layout_marginTop="50px"
        android:background="#333">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="11.5dp"
        android:layout_marginTop="50px"
        android:background="#333">
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView1" />
        
    </RelativeLayout>

</LinearLayout>
