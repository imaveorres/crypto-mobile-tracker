<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
     android:gravity="center_horizontal">
    <ImageView
        android:src="@drawable/spotplan"
        android:layout_width="0.0dp"
        android:layout_height="8.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView1"
        android:contentDescription="" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47.0dp"
        android:layout_marginTop="5px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:text="@string/android_cryptolist"
            android:layout_width="319.5dp"
            android:layout_height="500.5dp"
            android:minWidth="25px"
            android:minHeight="225px"
            android:id="@+id/btn1" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47.0dp"
        android:layout_marginTop="5px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:text="@string/android_spotcalcu"
            android:layout_width="319.5dp"
            android:layout_height="500.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnmain_signup" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47.0dp"
        android:layout_marginTop="5px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">        

        <Button
            android:text="@string/android_prices"
            android:layout_width="319.5dp"
            android:layout_height="500.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnmain_signup" />
    </RelativeLayout>
</LinearLayout>