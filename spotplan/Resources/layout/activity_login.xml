<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:src="@drawable/spotplan"
        android:layout_width="match_parent"
        android:layout_height="114.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@id/spotplan_logo"
        android:contentDescription=""
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uname_login"
            android:layout_width="305.0dp"
            android:layout_height="58.0dp"
            android:hint="@string/android_inputhint5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="0.0dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_login"
            android:layout_width="305.0dp"
            android:layout_height="58.0dp"
            android:hint="@string/android_inputhint2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="0.0dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="305.0dp"
            android:layout_height="wrap_content"
            android:text="@string/android_btntxt1"
            />
    </RelativeLayout>
</LinearLayout>